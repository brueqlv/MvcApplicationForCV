@using Newtonsoft.Json
@model MvcApplicationForCV.Models.CV

@{
    ViewData["Title"] = "Create CV";
    var educationStatusOptions = Html.GetEnumSelectList<MvcApplicationForCV.Models.Enum.EducationStatuss>();
    var languageSkillOptions = Html.GetEnumSelectList<MvcApplicationForCV.Models.Enum.LanguageSkills>();
}

<h1>Create CV</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @await Html.PartialAsync("_CvForm", Model)

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Show" class="btn btn-info">Back to List</a>

@section Scripts {
    <script>
        const educationStatusList = @Html.Raw(JsonConvert.SerializeObject(educationStatusOptions.Select(e => new { Value = e.Value, Text = e.Text })));
        const languageSkillList = @Html.Raw(JsonConvert.SerializeObject(languageSkillOptions.Select(e => new { Value = e.Value, Text = e.Text })));
    </script>
    <script src="~/js/form.js"></script>
}
